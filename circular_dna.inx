<?xml version="1.0" encoding="UTF-8"?>
<inkscape-extension>
	<_name>Circular DNA</_name>
	<id>MolBiol.circular_dna</id>

	<dependency type="executable" location="extensions">inkex.py</dependency>
	<dependency type="executable" location="extensions">simpletransform.py</dependency>
	<dependency type="execsutable" location="extensions">circular_dna.py</dependency>


  <_param name="tab" type="notebook">
    <page name="dna_circular" _gui-text="Circular DNA">
			<param name="radius_out" type="int" min="1" max="2000" _gui-text="Radius of the exterior strand:">200</param>
			<param name="radius_in" type="int" min="1" max="2000" _gui-text="Radius of the interior strand:">180</param>
			<param name="line_width" type="float" min="0.01" max="100" _gui-text="Line width:">10.00</param>
      <_param name="name" type="notebook">
				<page name="color" gui-text="Color:">
					<param name="color" type="color"></param></page></_param>
			<param name="num" type="int" min="0" max="1000" _gui-text="Number of bases drawn:">0</param>
			<param name="base_width" type="float" min="0" max="100" _gui-text="Width of lines representing bases:">0.00</param>
		</page>

		<page name="help" _gui-text="Help">
      <_param name="help_text" type="description">помогите</_param></page>
	</_param>


  <effect>
    <object-type>all</object-type>
      <effects-menu>
        <submenu _name="MolBiol"/>
      </effects-menu>
  </effect>

	<script>
		<command reldir="extensions" interpreter="python">circular_dna.py</command>
	</script>
</inkscape-extension>
